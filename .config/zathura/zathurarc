set selection-clipboard clipboard
set statusbar-h-padding 10
set statusbar-v-padding 5 
set page-padding 1 
set scroll-step 100
set highlight-transparency 0.15
set index-hover false
map i recolor
map <C-l> feedkeys ":blist <Tab>"
map <C-;> feedkeys ":blist . <Return>"
map <C-m> feedkeys ":bmark "
map <C-.> feedkeys ":bmark . <Return>"
map <C-d> feedkeys ":bdelete "
map <C-=> zoom in
map <C--> zoom out

set font "Sarasa Mono K 13"

# Everforest color scheme (hard, dark)
set notification-error-bg       "#3c474d"
set notification-error-fg       "#d3c6aa"
set notification-warning-bg     "#3c474d"
set notification-warning-fg     "#d3c6aa"
set notification-bg             "#3c474d"
set notification-fg             "#d3c6aa"
set completion-bg               "#434b53"
set completion-fg               "#d3c6aa"
set completion-group-bg         "#4b565c"
set completion-group-fg         "#859289"
set completion-highlight-bg     "#7fbbb3"
set completion-highlight-fg     "#2d353b"

# Define the color in index mode
set index-bg                    "#2d353b"
set index-fg                    "#d3c6aa"
set index-active-fg             "#2d353b"
set index-active-bg             "#a7c080"

set inputbar-bg                 "#2d353b"
set inputbar-fg                 "#d3c6aa"

set statusbar-bg                "#475258"
set statusbar-fg                "#d3c6aa"

set highlight-color "rgba(167, 192, 128, 0.5)"
set highlight-active-color "rgba(167, 192, 128, 0.5)"

set default-bg                  "#2d353b"
set default-fg                  "#d3c6aa"
set render-loading              true
set render-loading-bg           "#2d353b"
set render-loading-fg           "#d3c6aa"

# Recolor book content's color
set recolor-lightcolor          "#2d353b"
set recolor-darkcolor           "#d3c6aa"

set recolor                     "true"
# set recolor-keephue             true      # keep original color

# Startup options
#
#
set adjust-open width
set recolor true
