set selection-clipboard clipboard
set statusbar-h-padding 10
set statusbar-v-padding 5 
set page-padding 1 
set scroll-step 100
set highlight-transparency 0.15
set index-hover false
map i recolor
map <C-l> feedkeys ":blist <Tab>"
map <C-;> feedkeys ":blist . <Return>"
map <C-m> feedkeys ":bmark "
map <C-.> feedkeys ":bmark . <Return>"
map <C-d> feedkeys ":bdelete "
map <C-=> zoom in
map <C--> zoom out

set font "Sarasa Mono K 13"

set notification-error-bg       "#2e2c2b"
set notification-error-fg       "#d4be98"
set notification-warning-bg     "#2e2c2b"
set notification-warning-fg     "#d4be98"
set notification-bg             "#2e2c2b"
set notification-fg             "#d4be98"
set completion-bg               "#31363b"
set completion-fg               "#d4be98"
set completion-group-bg         "#3c3836"
set completion-group-fg         "#88909f"
set completion-highlight-bg     "#6cb6eb"
set completion-highlight-fg     "#31363b"

# Define the color in index mode
set index-bg                    "#2e2c2b"
set index-fg                    "#d4be98"
set index-active-fg             "#2e2c2b"
set index-active-bg             "#98971a"


set inputbar-bg                 "#2e2c2b"
set inputbar-fg                 "#d4be98"

set statusbar-bg                "#4f4743"
set statusbar-fg                "#d4be98"

set highlight-color "rgba(255, 255, 0, 0.5)"
set highlight-active-color "rgba(255, 255, 0, 0.5)"

set default-bg                  "#2e2c2b"
set default-fg                 "#d4be98"
set render-loading              true
set render-loading-bg           "#2e2c2b"
set render-loading-fg           "#d4be98"

# Recolor book content's color
set recolor-lightcolor          "#2e2c2b"
set recolor-darkcolor           "#d4be98"

set recolor                     "true"
# set recolor-keephue             true      # keep original color

# Startup options
#
#
set adjust-open width
set recolor true
